@model IEnumerable<TARge21Shop.Models.Car.CarIndexViewModel>

@{
    int rowNumber = 1;
}

<div class="h1">
    Cars
</div>

<div>
    <a asp-action="add" asp-controller="car" type="submit" class="btn btn-primary">Add</a>
</div>

<form method="post">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Nr</th>
                <th scope="col">Name</th>
                <th scope="col">Type</th>
                <th scope="col">EnginePower</th>
                <th scope="col">Milage</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var car in Model)
            {
                <tr>
                    <td>@rowNumber</td>
                    <td>@car.Name</td>
                    <td>@car.Type</td>
                    <td>@car.EnginePower</td>
                    <td>@car.Mileage</td>
                    <td>
                        <a asp-action="details" asp-controller="car" asp-route-id="@car.Id" class="btn btn-info">Details</a>
                        <a asp-action="edit" asp-controller="car" asp-route-id="@car.Id" class="btn btn-primary">Edit</a>
                        <a asp-action="delete" asp-controller="car" asp-route-id="@car.Id" type="submit" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
                rowNumber++;
            }
        </tbody>
    </table>
</form>