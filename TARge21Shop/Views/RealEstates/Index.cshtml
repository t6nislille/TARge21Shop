@model IEnumerable<TARge21Shop.Models.RealEstate.RealEstateIndexViewModel>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    int rowNumber = 1;
}

<div class="h1">
    Real Estates
</div>

<div>
    <a asp-action="create" asp-controller="RealEstates" type="submit" class="btn btn-primary">Create</a>
</div>

<form method="post">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Nr</th>
                <th scope="col">Location</th>
                <th scope="col">Country</th>
                <th scope="col">Size</th>
                <th scope="col">Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var realEstate in Model)
            {
                <tr>
                    <td>@rowNumber</td>
                    <td>@realEstate.Address, @realEstate.City</td>
                    <td>@realEstate.Country</td>
                    <td>@realEstate.Size</td>
                    <td>@realEstate.Price</td>
                    <td>
                        <a asp-action="details" asp-controller="RealEstates" asp-route-id="@realEstate.Id" class="btn btn-info">Details</a>
                        <a asp-action="update" asp-controller="RealEstates" asp-route-id="@realEstate.Id" class="btn btn-primary">Update</a>
                        <a asp-action="delete" asp-controller="RealEstates" asp-route-id="@realEstate.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
                rowNumber++;
            }
        </tbody>
    </table>
</form>